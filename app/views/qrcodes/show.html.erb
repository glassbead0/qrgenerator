<style type="text/css">
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }
  td {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
    padding: 0;
    margin: 0;
    width: 10px;
    height: 10px;
  }
  td.black { background-color: #000; }
  td.white { background-color: #fff; }
</style>

<div class="page-header">
  <%= link_to qrcodes_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_qrcode_path(@qrcode), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show qrcode</h1>
</div>

<dl class="dl-horizontal">
  <dt>Text to encode:</dt>
  <dd><%= @qrcode.text_to_encode %></dd>

  <dt>Size:</dt>
  <dd><%= @qrcode.size %></dd>

  <dt>Level:</dt>
  <dd><%= @qrcode.level %></dd>

  <dt>QR Code</dt>
      <dd>
        <table>
          <% @qr.modules.each_index do |x| %>
            <tr>
              <% @qr.modules.each_index do |y| %>
                <% if @qr.dark?(x,y) %>
                  <td class="black"/>
                <% else %>
                  <td class="white"/>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </table>
      </dd>


</dl>
