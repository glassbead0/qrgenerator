<%= form_for(@qrcode, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @qrcode.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@qrcode.errors.count, "error") %> prohibited this qrcode from being saved:</h4>

      <ul>
      <% @qrcode.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :text_to_encode, :class => "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :text_to_encode, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :size, :class => "col-sm-2 control-label" %>
    <div class="col-sm-1">
      <%= f.number_field :size, :class => "form-control", value: 1 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level, :class => "col-sm-2 control-label" %>
    <div class="col-sm-1">
      <%= f.select :level, options_for_select(%w(l m q h)), class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
