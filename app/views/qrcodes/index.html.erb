<div class="page-header">
  <%= link_to new_qrcode_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Qrcode
  <% end %>
  <h1>Listing qrcodes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Text to encode</th>
            <th>Version</th>
            <th>Error Correction Level</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @qrcodes) do |qrcode| %>
        <td><%= link_to qrcode_path(qrcode)  do %>
              <%= qrcode.text_to_encode %>
            <% end %>
        </td>
        <td><%= qrcode.size %></td>
        <td><%= qrcode.level %></td>
        <td><%= link_to 'Edit', edit_qrcode_path(qrcode), class: 'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Delete', qrcode, method: :delete, class: 'btn btn-xs btn-warning', data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
